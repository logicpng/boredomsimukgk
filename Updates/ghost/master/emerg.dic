OnInitialize
{
	EMERG.give_error_message = 1
}

OnSecondChange
{
	if EMERG.give_error_message == 1
	{
		"\![raise,OnEMERG.ErrorMessage]"
	}
}

OnMouseDoubleClick
{
	OnEMERG.ErrorMessage
}

OnEMERG.ErrorMessage
{
	ERASEVAR("EMERG.give_error_message")
	"\![sound,play,sfx/whoops.wav,--volume=%(volume)]\_q\f[bold,1][ REAL ERROR! ]\f[bold,0]\n[150]Logic fell asleep at the wheel! Please alert the creator through any available social media or Ukagaka Dream Team discord/forums!\x"
}